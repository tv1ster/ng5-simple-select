{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "outDir": "out-tsc",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "ng5-simple-select": [
        "dist"
      ],
      "ng5-simple-select/*": [
        "dist/*"
      ]
    }
  },
  "include": [
    "demo/**/*.ts"
  ],
  "compileOnSave": false
}
